<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/currencySelection">

    <ImageButton
        android:id="@+id/imageFlag"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textNameCurrency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        app:layout_constraintStart_toEndOf="@id/imageFlag"
        app:layout_constraintTop_toTopOf="@id/imageFlag"
        app:layout_constraintBottom_toBottomOf="@id/imageFlag"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/textCodeCurrency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xxx"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageFlag"
        app:layout_constraintBottom_toBottomOf="@id/imageFlag"/>

</androidx.constraintlayout.widget.ConstraintLayout>